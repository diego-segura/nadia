---
import BaseHead from '../components/BaseHead.astro';
const {frontmatter} = Astro.props;
---
<html>
  <head>
    <BaseHead title="Nadia Partners" description="Co-creating companies with extraordinary chief executives." />
  </head>

  <body class="max-w-2xl mx-5 md:mx-auto">
    <a href="/" class="block mt-4"><- <span class="underline">Go back</span></a>
    <div class="col-start-1 flex flex-col justify-between items-center mt-28 mb-32">
      <a class="" href="/"><img src="nadia-black.svg" alt="Nadia Partners logo" class="h-12 mr-auto" /></a>
    </div>

    <div class="mb-12">
      <h1 class="text-3xl tracking-[-0.03em] text-black font-medium text-center">{frontmatter.title}</h1>
      <div class="text-center mt-3">{frontmatter.date}</div>
    </div>
    <div
      class="
      text-[18px]
      text-left
      leading-[1.5]
      flex flex-col gap-6
      m-4
      pb-24
      prose-a:underline
      hover:prose-a:text-[#FF0000]

      prose-p:leading-6
      prose-strong:text-black
      prose-strong:font-medium
      text-black

      prose-headings:mx-auto
      prose-headings:text-black
      prose-headings:font-bold

      prose-h1:py-16
      prose-h1:text-[180%]
      prose-h1:tracking-tight

      prose-h2:text-2xl
      prose-h2:font-medium

      prose-headings:py-8

      prose-ul:pl-6
      prose-ul:pt-4
      prose-ul:pb-6
      prose-ol:pl-6
      prose-ol:pb-6
      prose-ul:list-disc
      prose-ol:list-decimal
      prose-li:ml-6

      prose-th:py-4

      ">
      <slot />
    </div>

  </body>
</html>
