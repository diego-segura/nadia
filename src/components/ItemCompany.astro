---
const { name, image, description, class:className } = Astro.props;
---

<!-- don't forget to remove class:className above -->
<div class="bg-neutral-100 rounded-2xl p-4 text-[13px]">
  <div class="flex flex-row">
    <img class="w-12 h-12 md:w-20 md:h-20 object-cover object-center rounded-md" src={image} />
    <div class="flex flex-col justify-center pr-8">
      <p class="pl-4 pt-1 text-[13px] leading-5 text-black font-medium">{name}</p>
      <p class="pl-4 text-[13px] leading-5 text-neutral-500">{description}</p>
      <div class="pl-4 pt-4 pb-1 text-[13px] text-neutral-500">
        <slot />
      </div>
    </div>
  </div>
</div>
